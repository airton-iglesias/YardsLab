generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url = env("DATABASE_URL")
  relationMode = "prisma"
}

model Users{
    id Int @id @default(autoincrement())
    email String @unique @db.VarChar(355)
    password String @db.VarChar(355)
    name String @db.VarChar(355)
    idade Int?
    sexo Sexo? @default(M)
    rua String? @db.VarChar(355)
    numero Int? 
    bairro String? @db.VarChar(355)
    cidade String? @db.VarChar(355)
    cep String? @db.VarChar(355)
    celular Int 
    isPremium Premium @default(USER)
    validityPremium String? @db.VarChar(10)
}

enum Sexo{
    M
    F
}

enum Premium{
    USER
    PREMIUM
    ADMIN
}