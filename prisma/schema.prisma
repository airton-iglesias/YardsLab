generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url = env("DATABASE_URL")
  relationMode = "prisma"
}

model Users {
  id               Int      @id @default(autoincrement())
  email            String   @unique @db.VarChar(355)
  password         String   @db.VarChar(355)
  name             String   @db.VarChar(355)
  idade            Int?
  sexo             Sexo?    @default(NULL)
  rua              String?  @db.VarChar(355)
  numero           Int?
  bairro           String?  @db.VarChar(355)
  cidade           String?  @db.VarChar(355)
  cep              String?  @db.VarChar(355)
  celular          Int?
  yardPass_Account  YardPassEnum @default(FALSE)
  isPremium        Premium  @default(USER)
  validity_Premium  String?  @db.VarChar(10)

  YardPass YardPass?
  YardPassPasswords YardPassPasswords[]
  YardPassPayments YardPassPayments[]
}

enum Sexo {
  NULL
  M
  F
}

enum YardPassEnum {
  FALSE
  TRUE
}

enum Premium {
  USER
  PREMIUM
  ADMIN
}

model YardPass {
  id        Int    @id @default(autoincrement())
  user      Users  @relation(fields: [user_Id], references: [id])
  user_Id    Int    @unique
  password  String @db.VarChar(355)
}

model YardPassPasswords {
  id        Int    @id @default(autoincrement())
  user      Users  @relation(fields: [user_Id], references: [id])
  user_Id    Int    @unique
  website   String @db.VarChar(355)
  username  String @unique @db.VarChar(355)
  password  String @db.VarChar(355)
}

model YardPassPayments {
  id        Int    @id @default(autoincrement())
  user      Users  @relation(fields: [user_Id], references: [id])
  user_Id    Int    @unique
  username  String @db.VarChar(355)
  card_name   String @db.VarChar(355)
  card_number  String @unique @db.VarChar(355)
  card_date  String @db.VarChar(355)
  card_security String @db.VarChar(4)
  
}
